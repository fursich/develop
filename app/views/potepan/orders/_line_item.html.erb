
<tr>
  <td class="col-xs-2">
    <%= link_to remove_item_potepan_orders_path(variant_id: line_item.variant.id, quantity: line_item.quantity), method: :post do %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <% end %>
    <span class="cartImage"><%= image_tag(line_item.product.display_image.attachment(:small), alt: "image", class: "image-responsive") %></span>
  </td>
  <td class="col-xs-4"><%= line_item.product.name %></td>
  <td class="col-xs-2 text-right"><%= line_item.price.to_i %></td>
  <td class="col-xs-2"><%= f.number_field :quantity %></td>
  <td class="col-xs-2 text-right"><%= line_item.price.to_i * line_item.quantity %></td>
</tr>
